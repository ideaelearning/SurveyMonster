@model SurveyMonster.Models.ViewModels.SurveyReportViewModel
@{
    ViewData["Title"] = "Anket Raporu";
}

<style>
    .report-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
    }

    .question-section {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border-left: 4px solid #667eea;
    }

    .answer-row {
        padding: 0.875rem;
        margin-bottom: 0.5rem;
        background: #f8f9fa;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .answer-row:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

    .stats-card {
        background: white;
        border-radius: 15px;
        padding: 1.25rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        text-align: center;
        height: 100%;
    }

    .stats-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 0.75rem;
        color: white;
        font-size: 1.25rem;
    }

    .stats-card h3 {
        font-size: 1.75rem;
        margin-bottom: 0.25rem;
    }

    .answer-chart {
        margin-top: 1rem;
        padding: 0 1rem;
    }

    .answer-bar {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .answer-bar-label {
        min-width: 80px;
        max-width: 120px;
        font-weight: 600;
        font-size: 0.9rem;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .answer-bar-fill {
        flex-grow: 1;
        height: 28px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        border-radius: 8px;
        margin: 0 0.75rem;
        position: relative;
        display: flex;
        align-items: center;
    }

    .answer-bar-count {
        min-width: 60px;
        text-align: right;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .report-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animated {
        animation: fadeInUp 0.5s ease-out;
    }
</style>

<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-12 report-container">
            <!-- Header -->
            <div class="report-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-2 fw-bold">@Model.SurveyName</h2>
                        <p class="mb-0">@Model.AssignmentTitle</p>
                        <small style="opacity: 0.9;">
                            <i class="bi bi-calendar me-2"></i>
                            @Model.StartDate.ToString("dd.MM.yyyy") - @Model.EndDate.ToString("dd.MM.yyyy")
                        </small>
                    </div>
                    <a asp-action="MySurveys" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>

            <!-- Statistics -->
            <div class="row mb-4 g-3">
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h3 class="mb-0">@Model.Answers.Select(a => a.UserName).Distinct().Count()</h3>
                        <p class="text-muted mb-0">Toplam Katılımcı</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="bi bi-question-circle"></i>
                        </div>
                        <h3 class="mb-0">@Model.GroupedByQuestion.Count</h3>
                        <p class="text-muted mb-0">Soru Sayısı</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="bi bi-chat-dots"></i>
                        </div>
                        <h3 class="mb-0">@Model.Answers.Count</h3>
                        <p class="text-muted mb-0">Toplam Cevap</p>
                    </div>
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger border-0 shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                </div>
            }

            <!-- Questions and Answers -->
            @foreach (var question in Model.GroupedByQuestion.OrderBy(q => q.Value.First().QuestionOrder))
            {
                var answers = question.Value;
                var answerGroups = answers.GroupBy(a => a.Answer).OrderByDescending(g => g.Count());
                var totalCount = answers.Count;

                <div class="question-section animated" style="animation-delay: @(question.Value.First().QuestionOrder * 0.1)s;">
                    <h5 class="mb-3">
                        <span class="badge bg-primary me-2">Soru @answers.First().QuestionOrder</span>
                        @question.Key
                    </h5>

                    <!-- Answer Distribution Chart -->
                    <div class="answer-chart">
                        <h6 class="mb-3">Cevap Dağılımı:</h6>
                        @foreach (var answerGroup in answerGroups)
                        {
                            var count = answerGroup.Count();
                            var percentage = (count * 100.0 / totalCount);

                            <div class="answer-bar">
                                <div class="answer-bar-label" title="@answerGroup.Key">@answerGroup.Key</div>
                                <div class="answer-bar-fill" style="width: @(percentage)%; min-width: 60px;">
                                    <span style="padding-left: 8px; color: white; font-weight: 600; font-size: 0.85rem;">@percentage.ToString("F0")%</span>
                                </div>
                                <div class="answer-bar-count">@count kişi</div>
                            </div>
                        }
                    </div>

                    <hr class="my-3" />

                    <!-- Detailed Answers -->
                    <h6 class="mb-3">Detaylı Cevaplar:</h6>
                    @foreach (var answer in answers.OrderBy(a => a.UserName))
                    {
                        <div class="answer-row">
                            <div class="row align-items-center g-2">
                                <div class="col-md-4">
                                    <strong style="font-size: 0.95rem;">@answer.FullName</strong>
                                    <br />
                                    <small class="text-muted">@answer.EmailAddress</small>
                                </div>
                                <div class="col-md-4">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    <strong style="font-size: 0.95rem;">@answer.Answer</strong>
                                </div>
                                <div class="col-md-4 text-end">
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>
                                        @answer.EntryDate.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add animation on load
        document.addEventListener('DOMContentLoaded', function () {
            const sections = document.querySelectorAll('.question-section');
            sections.forEach((section, index) => {
                section.style.animationDelay = (index * 0.1) + 's';
            });
        });
    </script>
}
