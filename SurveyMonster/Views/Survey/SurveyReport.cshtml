@model SurveyMonster.Models.ViewModels.SurveyReportViewModel
@{
    ViewData["Title"] = "Anket Raporu";
}

<style>
    .report-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
    }

    .question-section {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border-left: 4px solid #667eea;
    }

    .answer-row {
        padding: 1rem;
        margin-bottom: 0.5rem;
        background: #f8f9fa;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .answer-row:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .answer-row ul {
            list-style-type: none;
            padding-left: 0;
        }

        .answer-row ul li {
            padding: 0.25rem 0;
            position: relative;
            padding-left: 1.5rem;
        }

        .answer-row ul li::before {
            content: "•";
            position: absolute;
            left: 0.5rem;
            color: #667eea;
            font-weight: bold;
        }

    .stats-card {
        background: white;
        border-radius: 15px;
        padding: 1.25rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        text-align: center;
        height: 100%;
    }

    .stats-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 0.75rem;
        color: white;
        font-size: 1.25rem;
    }

    .stats-card h3 {
        font-size: 1.75rem;
        margin-bottom: 0.25rem;
    }

    .answer-chart {
        margin-top: 1rem;
        padding: 0 1rem;
    }

    .answer-bar {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .answer-bar-label {
        min-width: 80px;
        max-width: 120px;
        font-weight: 600;
        font-size: 0.9rem;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .answer-bar-fill {
        flex-grow: 1;
        height: 28px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        border-radius: 8px;
        margin: 0 0.75rem;
        position: relative;
        display: flex;
        align-items: center;
    }

    .answer-bar-count {
        min-width: 60px;
        text-align: right;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .report-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animated {
        animation: fadeInUp 0.5s ease-out;
    }

    .open-ended-answer {
        display: flex;
        align-items: flex-start;
    }

    .answer-text {
        flex: 1;
        padding: 0.75rem;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 3px solid #667eea;
    }

    .question-section .badge {
        font-size: 0.85rem;
    }
</style>

<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-12 report-container">
            <!-- Header -->
            <div class="report-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-2 fw-bold">@Model.SurveyName</h2>
                        <p class="mb-0">@Model.AssignmentTitle</p>
                        <small style="opacity: 0.9;">
                            <i class="bi bi-calendar me-2"></i>
                            @Model.StartDate.ToString("dd.MM.yyyy") - @Model.EndDate.ToString("dd.MM.yyyy")
                        </small>
                    </div>
                    <a asp-action="MySurveys" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>

            <!-- Statistics -->
            <div class="row mb-4 g-3">
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h3 class="mb-0">@Model.Answers.Select(a => a.UserName).Distinct().Count()</h3>
                        <p class="text-muted mb-0">Toplam Katılımcı</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="bi bi-question-circle"></i>
                        </div>
                        <h3 class="mb-0">@Model.GroupedByQuestion.Count</h3>
                        <p class="text-muted mb-0">Soru Sayısı</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="bi bi-chat-dots"></i>
                        </div>
                        <h3 class="mb-0">@Model.Answers.Count</h3>
                        <p class="text-muted mb-0">Toplam Cevap</p>
                    </div>
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger border-0 shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                </div>
            }

            <!-- Questions and Answers -->
            @foreach (var question in Model.GroupedByQuestion.OrderBy(q => q.Value.First().QuestionOrder))
            {
                var answers = question.Value;
                var firstAnswer = answers.First();
                var questionTypeId = firstAnswer.QuestionTypeId;
                var totalCount = answers.Count;

                <div class="question-section animated" style="animation-delay: @(firstAnswer.QuestionOrder * 0.1)s;">
                    <h5 class="mb-3">
                        <span class="badge bg-primary me-2">Soru @firstAnswer.QuestionOrder</span>
                        @question.Key
                        <span class="badge bg-secondary ms-2">@firstAnswer.QuestionTypeName</span>
                    </h5>

                    @if (questionTypeId == 1 || questionTypeId == 2)
                    {
                        <!-- Multiple Choice Questions (Single or Multiple Selection) -->
                        <!-- Answer Distribution Chart -->
                        <div class="answer-chart">
                            <h6 class="mb-3">Cevap Dağılımı:</h6>
                            @{
                                // Parse answers to handle multiple choice and "other" options
                                var parsedAnswers = new Dictionary<string, int>();
                                
                                foreach (var answer in answers)
                                {
                                    if (string.IsNullOrEmpty(answer.Answer)) continue;
                                    
                                    // Split by #SPLIT_CHOICE# for multiple choice answers
                                    var choices = answer.Answer.Split(new[] { "#SPLIT_CHOICE#" }, StringSplitOptions.RemoveEmptyEntries);
                                    
                                    foreach (var choice in choices)
                                    {
                                        var displayText = choice.Trim();
                                        
                                        // Check if this is an "other" option
                                        if (displayText.Contains("#other#"))
                                        {
                                            var parts = displayText.Split(new[] { "#other#" }, StringSplitOptions.None);
                                            if (parts.Length > 1 && !string.IsNullOrWhiteSpace(parts[1]))
                                            {
                                                // Has "other" text
                                                displayText = parts[0].Trim() + " (Diğer: " + parts[1].Trim() + ")";
                                            }
                                            else
                                            {
                                                // No "other" text, just show the option
                                                displayText = parts[0].Trim();
                                            }
                                        }
                                        
                                        // Also check AnswerOther field
                                        if (!string.IsNullOrEmpty(answer.AnswerOther) && !displayText.Contains("Diğer:"))
                                        {
                                            displayText += " (Diğer: " + answer.AnswerOther + ")";
                                        }
                                        
                                        if (!string.IsNullOrWhiteSpace(displayText))
                                        {
                                            if (parsedAnswers.ContainsKey(displayText))
                                            {
                                                parsedAnswers[displayText]++;
                                            }
                                            else
                                            {
                                                parsedAnswers[displayText] = 1;
                                            }
                                        }
                                    }
                                }
                                
                                var sortedAnswers = parsedAnswers.OrderByDescending(a => a.Value);
                            }
                            
                            @foreach (var answerItem in sortedAnswers)
                            {
                                var count = answerItem.Value;
                                var percentage = (count * 100.0 / totalCount);

                                <div class="answer-bar">
                                    <div class="answer-bar-label" title="@answerItem.Key">@answerItem.Key</div>
                                    <div class="answer-bar-fill" style="width: @(percentage)%; min-width: 60px;">
                                        <span style="padding-left: 8px; color: white; font-weight: 600; font-size: 0.85rem;">@percentage.ToString("F0")%</span>
                                    </div>
                                    <div class="answer-bar-count">@count kişi</div>
                                </div>
                            }
                        </div>

                        <hr class="my-3" />

                        <!-- Detailed Answers -->
                        <h6 class="mb-3">Detaylı Cevaplar:</h6>
                        
                        @if (questionTypeId == 2)
                        {
                            <!-- Multiple Selection - Group by user to show all their choices together -->
                            @foreach (var userGroup in Model.GroupedByQuestionAndUser[question.Key])
                            {
                                var userAnswers = userGroup.Value;
                                var firstUserAnswer = userAnswers.First();
                                
                                <div class="answer-row">
                                    <div class="row g-2">
                                        <div class="col-md-3">
                                            <strong style="font-size: 0.95rem;">@firstUserAnswer.FullName</strong>
                                            <br />
                                            <small class="text-muted">@firstUserAnswer.EmailAddress</small>
                                            @if (!string.IsNullOrEmpty(firstUserAnswer.PersonnelNo))
                                            {
                                                <br />
                                                <small class="text-muted">Personel No: @firstUserAnswer.PersonnelNo</small>
                                            }
                                        </div>
                                        <div class="col-md-6">
                                            <i class="bi bi-check-square text-success me-2"></i>
                                            <strong style="font-size: 0.9rem;">Seçilen Cevaplar:</strong>
                                            <ul class="mb-0 mt-1" style="padding-left: 2rem;">
                                                @foreach (var answer in userAnswers)
                                                {
                                                    <li>
                                                        @if (answer.Answer.Contains("#other#"))
                                                        {
                                                            var parts = answer.Answer.Split(new[] { "#other#" }, StringSplitOptions.None);
                                                            <strong>@parts[0].Trim()</strong>
                                                            @if (parts.Length > 1 && !string.IsNullOrWhiteSpace(parts[1]))
                                                            {
                                                                <span class="badge bg-info ms-2">Diğer: @parts[1].Trim()</span>
                                                            }
                                                            else if (!string.IsNullOrEmpty(answer.AnswerOther))
                                                            {
                                                                <span class="badge bg-info ms-2">Diğer: @answer.AnswerOther</span>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            @answer.Answer
                                                            @if (!string.IsNullOrEmpty(answer.AnswerOther))
                                                            {
                                                                <span class="badge bg-info ms-2">Diğer: @answer.AnswerOther</span>
                                                            }
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                @firstUserAnswer.EntryDate.ToString("dd.MM.yyyy HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <!-- Single Selection -->
                            @foreach (var answer in answers.OrderBy(a => a.UserName))
                            {
                                <div class="answer-row">
                                    <div class="row g-2">
                                        <div class="col-md-3">
                                            <strong style="font-size: 0.95rem;">@answer.FullName</strong>
                                            <br />
                                            <small class="text-muted">@answer.EmailAddress</small>
                                            @if (!string.IsNullOrEmpty(answer.PersonnelNo))
                                            {
                                                <br />
                                                <small class="text-muted">Personel No: @answer.PersonnelNo</small>
                                            }
                                        </div>
                                        <div class="col-md-6">
                                            @{
                                                // Parse and display answer
                                                if (!string.IsNullOrEmpty(answer.Answer))
                                                {
                                                    if (answer.Answer.Contains("#other#"))
                                                    {
                                                        // Single choice with "other" option
                                                        var parts = answer.Answer.Split(new[] { "#other#" }, StringSplitOptions.None);
                                                        <div>
                                                            <i class="bi bi-check-circle text-success me-2"></i>
                                                            <strong style="font-size: 0.95rem;">@parts[0].Trim()</strong>
                                                            @if (parts.Length > 1 && !string.IsNullOrEmpty(parts[1].Trim()))
                                                            {
                                                                <br />
                                                                <span class="badge bg-info mt-1">Diğer: @parts[1].Trim()</span>
                                                            }
                                                            else if (!string.IsNullOrEmpty(answer.AnswerOther))
                                                            {
                                                                <br />
                                                                <span class="badge bg-info mt-1">Diğer: @answer.AnswerOther</span>
                                                            }
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        // Simple answer
                                                        <div>
                                                            <i class="bi bi-check-circle text-success me-2"></i>
                                                            <strong style="font-size: 0.95rem;">@answer.Answer</strong>
                                                            @if (!string.IsNullOrEmpty(answer.AnswerOther))
                                                            {
                                                                <br />
                                                                <span class="badge bg-info mt-1">Diğer: @answer.AnswerOther</span>
                                                            }
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted"><i>Cevap verilmedi</i></span>
                                                }
                                            }
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                @answer.EntryDate.ToString("dd.MM.yyyy HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                    else if (questionTypeId == 3)
                    {
                        <!-- Open Ended Questions -->
                        <h6 class="mb-3">Cevaplar:</h6>
                        @foreach (var answer in answers.OrderBy(a => a.UserName))
                        {
                            <div class="answer-row">
                                <div class="row g-2">
                                    <div class="col-md-3">
                                        <strong style="font-size: 0.95rem;">@answer.FullName</strong>
                                        <br />
                                        <small class="text-muted">@answer.EmailAddress</small>
                                        @if (!string.IsNullOrEmpty(answer.PersonnelNo))
                                        {
                                            <br />
                                            <small class="text-muted">Personel No: @answer.PersonnelNo</small>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <div class="open-ended-answer">
                                            <i class="bi bi-chat-left-text text-primary me-2"></i>
                                            <div class="answer-text">
                                                @if (!string.IsNullOrEmpty(answer.Answer))
                                                {
                                                    <p class="mb-0" style="white-space: pre-wrap; word-wrap: break-word;">@answer.Answer</p>
                                                }
                                                else
                                                {
                                                    <p class="text-muted mb-0"><i>Cevap verilmedi</i></p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            @answer.EntryDate.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- Unknown Question Type - Fallback -->
                        <h6 class="mb-3">Detaylı Cevaplar:</h6>
                        @foreach (var answer in answers.OrderBy(a => a.UserName))
                        {
                            <div class="answer-row">
                                <div class="row g-2">
                                    <div class="col-md-3">
                                        <strong style="font-size: 0.95rem;">@answer.FullName</strong>
                                        <br />
                                        <small class="text-muted">@answer.EmailAddress</small>
                                        @if (!string.IsNullOrEmpty(answer.PersonnelNo))
                                        {
                                            <br />
                                            <small class="text-muted">Personel No: @answer.PersonnelNo</small>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        @if (!string.IsNullOrEmpty(answer.Answer))
                                        {
                                            <div>
                                                <i class="bi bi-info-circle text-info me-2"></i>
                                                <strong style="font-size: 0.95rem;">@answer.Answer</strong>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted"><i>Cevap verilmedi</i></span>
                                        }
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            @answer.EntryDate.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add animation on load
        document.addEventListener('DOMContentLoaded', function () {
            const sections = document.querySelectorAll('.question-section');
            sections.forEach((section, index) => {
                section.style.animationDelay = (index * 0.1) + 's';
            });
        });
    </script>
}
