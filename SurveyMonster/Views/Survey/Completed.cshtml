@{
    ViewData["Title"] = "Anket Tamamland?";
}

<style>
.success-container {
        min-height: 80vh;
   display: flex;
     align-items: center;
        justify-content: center;
    }

    .success-card {
    background: white;
   border-radius: 25px;
        padding: 3rem;
     box-shadow: 0 25px 70px rgba(0, 0, 0, 0.15);
   text-align: center;
     max-width: 600px;
        margin: 0 auto;
  }

    .success-icon-wrapper {
   position: relative;
        display: inline-block;
        margin-bottom: 2rem;
    }

    .success-icon {
   font-size: 6rem;
        color: #10b981;
     animation: successPop 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    .success-circle {
  position: absolute;
      top: 50%;
   left: 50%;
        transform: translate(-50%, -50%);
        width: 150px;
   height: 150px;
   background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.1) 100%);
   border-radius: 50%;
   animation: pulse 2s infinite;
 }

    @@keyframes successPop {
        0% {
            transform: scale(0);
      opacity: 0;
        }
   50% {
         transform: scale(1.2);
        }
  100% {
  transform: scale(1);
      opacity: 1;
        }
    }

  @@keyframes pulse {
        0%, 100% {
          transform: translate(-50%, -50%) scale(1);
 opacity: 0.5;
        }
        50% {
   transform: translate(-50%, -50%) scale(1.1);
       opacity: 0.3;
        }
 }

    .success-title {
        font-size: 2.5rem;
        font-weight: bold;
     background: linear-gradient(135deg, #10b981 0%, #059669 100%);
   -webkit-background-clip: text;
     -webkit-text-fill-color: transparent;
        background-clip: text;
margin-bottom: 1.5rem;
    }

    .success-message {
        font-size: 1.2rem;
 color: #374151;
        margin-bottom: 1rem;
    line-height: 1.6;
    }

    .success-submessage {
        color: #6b7280;
        font-size: 1rem;
 margin-bottom: 2.5rem;
}

    .action-btn {
   border: none;
  border-radius: 12px;
        padding: 0.875rem 2rem;
   font-size: 1rem;
   font-weight: 600;
        transition: all 0.3s ease;
        margin: 0.5rem;
}

    .primary-action {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
   box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .primary-action:hover {
        transform: translateY(-3px);
      box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
    }

    .secondary-action {
   background: #f3f4f6;
        color: #374151;
        border: 2px solid #e5e7eb;
    }

    .secondary-action:hover {
background: #e5e7eb;
   transform: translateY(-2px);
    }

    .confetti {
   position: absolute;
        width: 10px;
  height: 10px;
    background: #667eea;
        animation: confetti-fall 3s linear infinite;
    }

    @@keyframes confetti-fall {
   to {
      transform: translateY(100vh) rotate(360deg);
       opacity: 0;
     }
    }

    .stats-container {
        display: flex;
        justify-content: center;
        gap: 2rem;
   margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px dashed #e5e7eb;
    }

    .stat-item {
        text-align: center;
    }

    .stat-icon {
  width: 45px;
   height: 45px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
   display: flex;
align-items: center;
  justify-content: center;
        margin: 0 auto 0.5rem;
        color: white;
        font-size: 1.2rem;
 }

    .stat-value {
        font-size: 1.5rem;
        font-weight: bold;
      color: #1f2937;
    }

    .stat-label {
   font-size: 0.875rem;
  color: #6b7280;
    }

    @@keyframes fadeInUp {
        from {
     opacity: 0;
   transform: translateY(30px);
        }
 to {
       opacity: 1;
          transform: translateY(0);
    }
    }

    .animated {
        animation: fadeInUp 0.8s ease-out;
 }
</style>

<div class="success-container">
    <div class="container">
        <div class="row justify-content-center">
   <div class="col-md-8">
    <div class="success-card animated">
            <!-- Success Icon -->
   <div class="success-icon-wrapper">
        <div class="success-circle"></div>
 <i class="bi bi-check-circle-fill success-icon"></i>
      </div>

       <!-- Title -->
    <h1 class="success-title">Tebrikler!</h1>

         <!-- Message -->
              @if (TempData["Success"] != null)
         {
      <p class="success-message">@TempData["Success"]</p>
}
           else
{
   <p class="success-message">Anketimize kat?ld???n?z için te?ekkür ederiz.</p>
            <p class="success-submessage">
   <i class="bi bi-heart-fill text-danger me-2"></i>
        Görü?leriniz bizim için çok de?erli ve iyile?tirmelerimize yön veriyor.
      </p>
         }

       <!-- Stats -->
             <div class="stats-container">
        <div class="stat-item">
   <div class="stat-icon">
  <i class="bi bi-check2-all"></i>
      </div>
    <div class="stat-value">100%</div>
         <div class="stat-label">Tamamland?</div>
        </div>
<div class="stat-item">
     <div class="stat-icon">
    <i class="bi bi-trophy"></i>
   </div>
       <div class="stat-value">+1</div>
      <div class="stat-label">Kat?l?m</div>
         </div>
         </div>

      <!-- Action Buttons -->
         <div class="mt-4 pt-3">
        <a asp-controller="Survey" asp-action="Index" class="action-btn primary-action">
          <i class="bi bi-arrow-repeat me-2"></i>
    Yeni Anket
             </a>
       <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
      @Html.AntiForgeryToken()
  <button type="submit" class="action-btn secondary-action">
  <i class="bi bi-box-arrow-right me-2"></i>
          Ç?k?? Yap
   </button>
       </form>
     </div>

 <!-- Additional Info -->
        <div class="mt-4 pt-3">
       <small class="text-muted">
    <i class="bi bi-shield-check me-1"></i>
      Cevaplar?n?z güvenli bir ?ekilde kaydedildi
   </small>
       </div>
    </div>
      </div>
  </div>
 </div>
</div>

@section Scripts {
    <script>
        // Create confetti effect
   function createConfetti() {
            const colors = ['#667eea', '#764ba2', '#10b981', '#f59e0b', '#ef4444'];
       const confettiCount = 50;

            for (let i = 0; i < confettiCount; i++) {
    const confetti = document.createElement('div');
       confetti.className = 'confetti';
    confetti.style.left = Math.random() * 100 + '%';
      confetti.style.animationDelay = Math.random() * 3 + 's';
    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
  document.body.appendChild(confetti);

       // Remove confetti after animation
       setTimeout(() => confetti.remove(), 3000);
   }
   }

  // Trigger confetti on page load
        window.addEventListener('load', () => {
    setTimeout(createConfetti, 300);
        });
    </script>
}
