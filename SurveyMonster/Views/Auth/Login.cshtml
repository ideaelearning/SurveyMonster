@model SurveyMonster.Models.Requests.LoginRequest
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Survey Monster | v1</h2>
                    <h5 class="text-center text-muted mb-4">Ankete Katılım</h5>

                    <!-- Anonymous Survey Option -->
                    <div class="mb-4">
                        <div class="d-grid">
                            <a href="@Url.Action("AnonymousEntry", "Auth", new { returnUrl = ViewData["ReturnUrl"] })"
                               class="btn btn-anonymous btn-lg">
                                <i class="bi bi-incognito"></i> Anonim Olarak Katıl
                            </a>
                        </div>
                        <p class="text-center text-muted mt-2 mb-0">
                            <small>Giriş yapmadan ankete katılabilirsiniz</small>
                        </p>
                    </div>

                    <div class="text-center my-3">
                        <hr class="my-2" />
                        <span class="text-muted">veya</span>
                        <hr class="my-2" />
                    </div>

                    <!-- Login Form -->
                    <h6 class="text-center mb-3">Hesabınızla Giriş Yapın</h6>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @* Hidden field to preserve returnUrl *@
                        @if (ViewData["ReturnUrl"] != null)
                        {
                            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        }

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Email</label>
                            <input asp-for="Username" class="form-control" placeholder="ornek@email.com" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            Test hesabı: cem.kurt@ideaelearning.net / Idea.123!
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
